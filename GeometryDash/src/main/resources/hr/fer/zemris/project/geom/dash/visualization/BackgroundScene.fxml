					textAlignment="CENTER" wrappingWidth="1280.0"
					AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0"
					AnchorPane.rightAnchor="0.0">
					<font>
						<Font size="96.0" />
					</font>
					<effect>
						<DropShadow />
					</effect>
				</Text>
			</children>
		</AnchorPane>
		<AnchorPane prefHeight="200.0" prefWidth="200.0">
			<children>
				<ImageView fitWidth="900.0" pickOnBounds="true"
					preserveRatio="true" AnchorPane.leftAnchor="190.0"
					AnchorPane.rightAnchor="190.0" AnchorPane.topAnchor="50.0">
					<image>
						<Image url="@../static/title.png" />
					</image>
				</ImageView>
			</children>
		</AnchorPane>
	</children>
</StackPane>
